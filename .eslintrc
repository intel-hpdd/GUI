{
  "parser": "babel-eslint",
  "plugins": [
    "flow-vars",
    "flowtype"
  ],
  "rules": {
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "flowtype/space-after-type-colon": [
        1,
        "never"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "indent": [
      2,
      2,
    ],
    "no-func-assign": 0,
    "no-constant-condition": 0,
    "no-unsafe-finally": 0,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "curly": [
      2,
      "multi",
      "consistent"
    ],
    "eol-last": [
      2,
      "unix"
    ],
    "eqeqeq": [
      "error",
      "allow-null"
    ],
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    brace-style: [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ]
  },
  "globals": {
    "module": false,
    "inject": false,
    "jasmine": false,
    "expectToEqual": false,
    "expectStreamToContainItem": false,
    "spyOn": false,
    "it": false,
    "itAsync": false,
    "describe": false,
    "expect": false,
    "beforeEach": false,
    "beforeEachAsync": false,
    "afterEach": false,
    "convertNvDates": false,
    "patchRateLimit": false,
  },
  "env": {
    "es6": true,
    "browser": true
  },
  parserOptions: {
    ecmaVersion: 6,
    sourceType: "module"
  },
  "extends": "eslint:recommended"
}
